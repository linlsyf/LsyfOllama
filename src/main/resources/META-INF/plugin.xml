<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.lsyf.LsyfOllama</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>LsyfOllama</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="http://www.linlsyf.cn">linlsyf</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
          ai chat and contextmenu query    you can  config  Ollama ip:11434 and model
          after that you select code  right click select linlsyfQuery menu  and
          linlsyfRepair

  ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>
    <!-- 若需兼容旧版平台（≤2019.1），添加模块依赖 -->
    <depends>com.intellij.modules.java</depends>
    <idea-version since-build="251.0" until-build="255.*"/>  <!-- 控制兼容的 IDE 版本范围 -->

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
                id="LinlsyfAi"
                anchor="right"
                icon="/META-INF/pluginIcon.svg"
                factoryClass="com.lsyf.lsyfollama.ui.toolWindowFactory.ChatWindowHomeFactory"/>
        <applicationConfigurable id="MyPlugin.Settings" displayName="LsyfSettings" instance="com.lsyf.lsyfollama.cofig.MySettingsPanel"/>
        <projectService serviceImplementation="com.lsyf.lsyfollama.ToolWindowService"/>
    </extensions>

    <actions>
        <!--        <action id="ollamakit" class="com.lsyf.lsyfollama.ui.home" text="linOllama">-->
        <!--            <add-to-group group-id="ToolsMenu" anchor="first"/>-->
        <!--        </action>-->

        <action id="linlsyfQuery" class="com.lsyf.lsyfollama.ui.actions.ContextMenuSearchAction" text="linlsyfQuery"
                description="显示修复建议">
            <action id="apiTest" class="com.lsyf.lsyfollama.ui.actions.ParseApiAction" text="apiTest"
                    description="显示修复建议">
                <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            </action>
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
        <action id="linlsyfRepair" class="com.lsyf.lsyfollama.ui.actions.ContextMenuRepairAction" text="linlsyfRepair"
                description="立即修复">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
        <action id="ApiTester.ParseCurrentFile" class="com.lsyf.lsyfollama.ui.actions.ParseApiAction"
                text="Parse APIs in File" description="Find all API endpoints in current file">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>